<?xml version="1.0"?>
<robot name="meldog_simple_core"
    xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="base_properties.urdf.xacro" />

    <link name="upper_limb_link">
        <visual>
            <geometry>
                <mesh filename="package://meldog_simple_twin/meshes/visual/${upper_limb_vis_stl_name}" 
                      scale="0.001 0.001 0.001" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://meldog_simple_twin/meshes/collision/${upper_limb_coll_stl_name}" 
                      scale="0.001 0.001 0.001" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
    </link>

    <link name="lower_limb_link">
        <visual>
            <geometry>
                <mesh filename="package://meldog_simple_twin/meshes/visual/${lower_limb_vis_stl_name}" 
                      scale="0.001 0.001 0.001" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://meldog_simple_twin/meshes/collision/${lower_limb_coll_stl_name}" 
                      scale="0.001 0.001 0.001" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
    </link>

    <link name="foot_link" />

    <link name="leg_body_link">
        <visual>
            <geometry>
                <mesh filename="package://meldog_simple_twin/meshes/visual/${leg_body_vis_stl_name}" 
                      scale="0.001 0.001 0.001" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://meldog_simple_twin/meshes/collision/${leg_body_coll_stl_name}" 
                      scale="0.001 0.001 0.001" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
    </link>

    <joint name="leg_body_upper_limb_joint" type="revolute">
        <parent link="leg_body_link" /> 
        <child link="upper_limb_link" />
        <origin xyz="${leg_body_upper_limb_x}
                     ${leg_body_upper_limb_y}
                     ${leg_body_upper_limb_z}" 
                rpy="0 0 0" />
        <limit lower="${leg_body_upper_limb_lower_limit/180.0*pi}" 
               upper="${leg_body_upper_limb_upper_limit/180.0*pi}" 
               effort="${leg_body_upper_limb_effort}" 
               velocity="${leg_body_upper_limb_velocity}" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="upper_limb_lower_limb_joint" type="revolute">
        <parent link="upper_limb_link" />
        <child link="lower_limb_link" />
        <origin xyz="0 0 ${-upper_limb_length}" rpy="0 0 0" />
        <limit lower="${upper_limb_lower_limb_lower_limit/180.0*pi}" 
               upper="${upper_limb_lower_limb_upper_limit/180.0*pi}" 
               effort="${upper_limb_lower_limb_effort}" 
               velocity="${upper_limb_lower_limb_velocity}" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="lower_limb_foot_joint" type="fixed">
        <parent link="lower_limb_link" />
        <child link="foot_link" />
        <origin xyz="0 0 ${-lower_limb_length_to_foot}" rpy="0 0 0" />
    </joint>

</robot>