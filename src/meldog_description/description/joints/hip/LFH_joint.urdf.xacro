<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <joint name="LFH_joint" type="revolute">
        <parent link="LFH_link" /> 
        <child link="LFUL_link" />
        <origin xyz="${H_x}
                     ${H_y}
                     ${H_z}" 
                rpy="0 0 0" />
        <limit lower="${H_lower_limit/180.0*pi}" 
               upper="${H_upper_limit/180.0*pi}" 
               effort="${H_effort}" 
               velocity="${H_velocity}" />
        <axis xyz="0 1 0" />
    </joint>

</robot>